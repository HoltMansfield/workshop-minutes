{
  "name": "uno",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "files": [
    "./dist"
  ],
  "npm-scripts-explained": {
    "start": "start the app with ts-node - this can be used to attach to a debugger",
    "start:watch": "re-start the app whenever code changes",
    "lint": "lint all ts files in /src folder",
    "lint:watch": "run the lint command when anything within the /src folder changes",
    "lint:fix": "fix all linting issues in all files * use with caution *",
    "build": "transplile TS into es5 in the /dist folder",
    "build:watch": "run the build command when anything within the /src folder changes",
    "_delete-deps": "Deletes node_modules folder, called at the monorepo level with clean"
  },
  "scripts": {
    "start": "env-cmd -f env/development.env node --inspect=5858 -r ts-node/register --preserve-symlinks ./src/app.ts",
    "start:watch": "env-cmd -f env/development.env nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node' src/app.ts",
    "lint": "eslint src/**/*.ts",
    "lint:watch": "watch 'npm run lint' src",
    "lint:fix": "eslint --fix src/**/*.ts",
    "build": "tsc -p .",
    "build:watch": "watch 'npm run build' src",
    "_delete-deps": "rm -rf node_modules"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@graphql-eslint/eslint-plugin": "^3.14.3",
    "@tsconfig/recommended": "^1.0.1",
    "@types/express": "^4.17.2",
    "@types/node": "^12.12.18",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.0.1",
    "env-cmd": "^10.0.1",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.2",
    "prettier": "^2.5.1",
    "ts-node": "^8.5.4",
    "typescript": "^4.4.4",
    "watch": "^1.0.2"
  },
  "dependencies": {
    "@graphql-tools/load-files": "^6.6.1",
    "@graphql-tools/merge": "^8.3.14",
    "@graphql-tools/schema": "^9.0.12",
    "bcrypt": "^5.1.0",
    "concurrently": "^5.2.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-graphql": "^0.12.0",
    "express-jwt": "^5.3.3",
    "graphql": "^16.6.0",
    "graphql-type-datetime": "^0.2.4",
    "mongo": "^0.1.0",
    "mongodb": "^4.13.0",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.4",
    "password-hasher": "^1.0.1",
    "pluralize": "^8.0.0",
    "serialize-error": "^5.0.0"
  }
